<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5CEFB">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ei Thinzar Win Maung"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="#EF1616"
        android:layout_marginTop="100px"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginVertical="50px">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:textColor="#EF1616"
            android:background="#F8C6C2"
            android:layout_marginHorizontal="50px"
            android:paddingHorizontal="50px"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="#EF1616"
            android:background="#F8C6C2"
            android:layout_marginHorizontal="50px"
            android:paddingHorizontal="50px"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Have a nice day !"
        android:textColor="#EF1616"
        android:textSize="20sp"
        android:gravity="center"
        />

</LinearLayout>